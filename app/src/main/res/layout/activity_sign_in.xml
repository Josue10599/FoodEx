<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SignInActivity">

    <ImageView
        android:id="@+id/activity_sign_in_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="@dimen/keyline_2"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@id/activity_sign_in_destaque"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <ImageView
        android:id="@+id/activity_sign_in_destaque"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:background="@android:color/transparent"
        android:src="@drawable/fundo_retangulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_sign_in_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:text="@string/entre_e_gerencie"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.MyTheme.Headline2"
        android:textColor="@android:color/primary_text_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/activity_sign_in_destaque"
        app:layout_constraintStart_toStartOf="@id/activity_sign_in_destaque"
        app:layout_constraintTop_toBottomOf="@id/activity_sign_in_image"
        app:layout_constraintVertical_bias="0.01" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/activity_sign_in_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/activity_sign_in_destaque"
        app:layout_constraintEnd_toEndOf="@id/activity_sign_in_titulo"
        app:layout_constraintStart_toStartOf="@id/activity_sign_in_titulo"
        app:layout_constraintTop_toBottomOf="@id/activity_sign_in_titulo"
        app:layout_constraintVertical_bias="0.1" />

    <ProgressBar
        android:id="@+id/activity_sign_in_progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/color_background"
        android:indeterminate="true"
        android:max="100"
        android:progress="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>